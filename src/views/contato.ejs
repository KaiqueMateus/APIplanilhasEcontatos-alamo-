<%- include('includes/head') %>

<section class="container">
    <div class="row">
        <div class="col-lg-2">

        </div>

        <div class="col-lg-8 my-4">
            <h1 class="text-center">Contatos</h1>
            <p class="text-center">Crie ou edite seu contato abaixo.</p>

            <%- include('includes/messagens') %>
            
            <% if(contato._id) { %>
            <form action="/contato/edit/<%= contato._id %>" method="POST">
                <% } else { %>
                    <form action="/contato/register" method="POST">
                        <% } %>
              <div class="form-group">
                <label>Nome:</label>
                <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
              </div>
              
              <div class="form-group">
                <label>Sobrenome:</label>
                <input value="<%= contato.sobrenome %> "text" class="form-control" name="sobrenome">
              </div>
              

              <div class="form-group">
                <label>E-mail:</label>
                <input value="<%= contato.email %>"email" class="form-control" name="email">
              </div>
              
              <button type="submit" class="btn btn-primary my-3">Salvar</button>
            </form>
            
        </div>

        <div class="col-lg-2"></div>
    </div>
</section>

<%- include('includes/footer') %>